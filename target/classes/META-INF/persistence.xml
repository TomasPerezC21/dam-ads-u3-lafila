<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="ejemplopersistenciaJPA" transaction-type="RESOURCE_LOCAL">

        <!-- ENTIDADES -->
        <class>Entidades.Socio</class>
        <class>Entidades.Pista</class>
        <class>Entidades.Reserva</class>

        <properties>

            <!-- CONEXIÃ“N A LA BASE DE DATOS -->
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3305/club_dama"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="Skiline-123456789"/>

            <!-- CONFIGURACIÃ“N HIBERNATE -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>

            <!-- validate = no modifica la BD, solo valida -->
            <property name="hibernate.hbm2ddl.auto" value="none"/>


            <!-- Mostrar SQL en consola -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

        </properties>

    </persistence-unit>

</persistence>